<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="tweet"
            type="com.twitter.twitterbelltest.model.TweetItem" />
    </data>

    <androidx.cardview.widget.CardView
        tools:ignore="KeyboardInaccessibleWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/s2"
            android:paddingBottom="@dimen/s2">

            <include
                android:id="@+id/userInfoLayout"
                layout="@layout/view_userinfo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tweetItem="@{tweet}" />

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MediumTextViewGreyBold"
                app:layout_constraintBottom_toTopOf="@+id/retweetTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userInfoLayout"
                android:layout_marginTop="@dimen/s1"
                android:text="@{tweet.tweetText}" />

            <TextView
                android:id="@+id/retweetTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MediumTextViewGreyNormal"
                android:text="@{`Retweeted by @` +tweet.tweetText}"
                android:visibility="@{tweet.tweetRetweeted ==true?View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/tweetActionLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/statusTextView"
                android:layout_marginTop="@dimen/s1" />

            <include
                android:id="@+id/tweetActionLayout"
                layout="@layout/item_tweet_action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/retweetTextView"
                app:tweetItemAction="@{tweet}" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
